{% extends 'layouts/base.html.twig' %}

{% block title %}Leave us a message
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-6 mx-auto ">
			<h1 class="display-4 my-5 text-center ">Are you facing any <span class="text-danger">issues</span> &#128532; ?</h1>
			{{ form_start(form) }}

				{{ form_row(form.name) }}
				{{ form_row(form.country) }}
				{{ form_row(form.city) }}
				{{ form_row(form.message) }}

				<button type="submit" class="btn btn-primary w-100" formnovalidate>Send</button>

			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
